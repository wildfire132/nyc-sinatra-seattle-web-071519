
<body>
<form method="POST" action="/figures/<%=@figure.id%>">
    <input type="hidden" name="_method" value="patch">
    <label for="figure[name]"> Name: </label>
    <input type="text" name="figure[name]" value="<%=@figure.name%>">

    <h2>Titles</h2>
    <% @titles.each do |title|%>
    <br> <%=title.name%> 
    <% if @my_titles.include?(title) == true%>
        <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" checked>
    <% else %> 
        <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>"> 
    <%end%>
    <%end%>

    <h2>Create New title:</h2>
    <input type="text" name="title[name]">

    <h2>Landmarks</h2>
    <% @landmarks.each do |landmark|%>
        <br> <%=landmark.name%> 
        <% if @my_landmarks.include?(landmark) == true%>
            <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" checked>
        <% else %> 
            <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>"> 
        <%end%>
        <%end%>
    

    <h2>Create New Landmark:</h2>
    <label for="landmark[name]"> Name: </label>
    <input type="text" name="landmark[name]">
    <label for="landmark[year_completed]"> Year: </label>
    <input type="text" name="landmark[year_completed]">

    <input type="submit" value="Edit New Figure">
</form>
</body>
